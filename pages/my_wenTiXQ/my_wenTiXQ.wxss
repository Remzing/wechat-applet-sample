/* pages/my_xiaoXi/my_xiaoXi.wxss */
@import "/wxParse/wxParse.wxss";
page{
  background-color: #f4f6f7;
}
.top{
  background-color: #fff;
  padding: 46rpx 30rpx 30rpx 30rpx;
  border-top: 1px solid #eee;
}
.top .title{
  font-size: 34rpx;
  font-weight: bold;
  color: #353535;
  margin-bottom: 20rpx;
}
.top .txt-cen{
  color: #353535;
  line-height: 50rpx;
  font-size: 28rpx;
}

/*热点问题 start*/
.hot-title{
  color: #888888;
  margin: 40rpx 0 22rpx 32rpx;
  font-size: 28rpx;
}
.text-cons{
  background-color: #fff;
}
.text-cons .text-item{
  height: 108rpx;
  line-height: 108rpx;
  padding-left: 38rpx;
  border-bottom: 1px solid #eee;
}
.text-cons .text-item:last-child{
  border-bottom:none !important;
}
.text-cons .text-item .iconfont{
  color: #dddddd;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.text-cons .text-item .txt{
  color: #353535;
  font-size: 28rpx;
}
/*热点问题  end*/
.btn{
  width: 690rpx;
  margin: 42rpx auto 30rpx auto;
}